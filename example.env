# Aktive Module (kommagetrennt)
# Verfügbar: clock, weather, server
MODULES=clock,weather,server

# Bildgröße
WIDTH=800
HEIGHT=480
DPI=100

# Ausgabeverzeichnis
OUTPUT_DIR=/mnt/usb/

# E-Ink Modus (true = schwarz/weiß, false = Farbe)
EINK=false

# Standort
LOCATION=Berlin
CITY=Berlin · DE
LATITUDE=52.52
LONGITUDE=13.41
TIMEZONE=Europe/Berlin

# Server / Glances
GLANCES_HOST=http://localhost:61208
SERVER_NAME=homelab-01

# Docker Container (kommagetrennt, exakt wie in `docker ps`)
DOCKER_WHITELIST=deluge,nginx,portainer,vaultwarden

# systemd Services (kommagetrennt, ohne .service)
SYSTEMD_WHITELIST=httpd,fail2ban,sshd,firewalld

# SSH Hostname für systemd + Docker Checks (exakt wie in ~/.ssh/config oder /etc/hosts)
SSH_HOST=example.name

# SSH User (Standard: aktueller User des Pi)
SSH_USER=

# Ping-Ziel für Internetverbindung (Standard: 1.1.1.1)
PING_HOST=1.1.1.1

